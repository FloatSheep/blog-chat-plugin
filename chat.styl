:root
  --chat-card-bg: #fff
  --chat-card-second-bg: #f1f3f8
  --chat-card-border: #e3e8f7

[data-theme=dark]
  --chat-card-second-bg: #3e3f41
  --chat-card-border: #42444a
  --chat-card-bg: #2d2d2d

.chat-box
    @extend .cardHover
    overflow: hidden
    width: 100%
    border-radius: 12px
    padding: 20px 30px

    .chat-title
        display: flex
        justify-content: flex-start
        background: var(--default-bg-color)
        padding: 10px 10px
        color: var(--white)
        display: flex
        border-top-left-radius: 12px
        border-top-right-radius: 12px
        align-items: center
        justify-content: space-between

        i
            font-size: 16px
            margin: 0 10px

        .chat-title-text
            flex: 1
            font-size: 16px
            white-space: nowrap; /* 不换行 */
            overflow: hidden; /* 超出部分隐藏 */
            text-overflow: ellipsis; /* 显示省略号 */

.chat-box
    padding: 20px 30px
    box-sizing: border-box
    border: var(--chat-card-border)

    +maxWidth768()
        padding: 20px 10px

.chat-content
    overflow-y: auto
    max-height: 600px
    border-bottom-right-radius: 12px
    border-bottom-left-radius: 12px
    border: solid 1px var(--chat-card-border)
    padding: 0 20px 0 20px

.chat-message
    display: flex
    flex-direction: row
    justify-content: flex-start
    margin: 20px 0

    .chat-avatar
        width: 40px
        height: 40px
        border-radius: 50% !important
        max-width: 2000px !important
        margin: 5px 10px 0 0 !important

    .chat-message-text-wrapper
        display: flex
        flex-direction: column
        width: auto

        +maxWidth768()
              width: auto

        .chat-message-text
            background: var(--chat-card-second-bg)
            border: 1px solid var(--chat-card-border)
            padding: 10px
            border-radius: 0 10px 10px 10px
            width: fit-content
            max-width: 700px
            word-wrap: break-word

            +maxWidth768()
              max-width: 170px

    &.me
        flex-direction: row-reverse

        .chat-avatar
            margin: 5px 0 0 10px !important

        .chat-message-subtitle
            display: flex
            flex-direction: column
            align-items: flex-end

        .chat-message-text-wrapper
            align-items: flex-end
            width: auto

            .chat-message-text
                background: var(--chat-card-bg)
                border-radius: 10px 0 10px 10px
        p.chat-message-name
            display: flex
            justify-content: flex-end